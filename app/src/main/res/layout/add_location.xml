<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AddLocation">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Location"
            android:fontFamily="cursive"
            android:textSize="50dp"
            android:gravity="center"
            android:id="@+id/addlocation"
            android:layout_marginTop="66dp"
            />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType=""
            android:hint="State"
            android:textSize="15dp"
            android:textColorHint="#0D775B"
            android:padding="15dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/addlocation"
            android:ems="10"
            android:id="@+id/State"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType=""
            android:hint="City"
            android:textColorHint="#0D775B"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:textSize="15dp"
            android:ems="10"
            android:id="@+id/city"
            android:layout_below="@+id/State"
            android:layout_alignLeft="@+id/State"
            android:layout_alignStart="@+id/State" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType=""
            android:hint="Pincode"
            android:textColorHint="#0D775B"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:textSize="15dp"
            android:ems="10"
            android:id="@+id/Pincode"
            android:layout_below="@+id/city"
            android:layout_alignLeft="@+id/city"
            android:layout_alignStart="@+id/city" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Pincode"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0D775B"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Submit" />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>





